<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:background="@drawable/shape_white_16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_today" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/callType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incoming Call"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                tools:text="Adel Sarami" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnDecline"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/ripple_second"
            android:gravity="center"
            android:text="Decline"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btnAnswer"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ripple_button_done"
            android:gravity="center"
            android:text="Answer"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>